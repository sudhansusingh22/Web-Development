extends layout
mixin metric(id,title,footer)
  div(class="panel panel-default",id="#{id-metric")
  if title
    div.panel-heading: h3.panel-title=title
    div(class="panel-body metric")
    h1(data-field="#{id}")="TBD"
  if footer
    div.panel-footer= footer  
block styles
  //link(rel='stylesheet',href='/stylesheets/dashboard.css')
block scripts
  // bind the data field defined in mixin
  script(src='/javascripts/dashboard1.js')
  //script(src='/javascripts/streamEmitter.js')	
block content
  div(class="container")
  div.page-header: h1 Streaming Dashboard
  div(class="row")
  div(class="col-lg-3")
  +metric("first","Data Stream Viewer", "Data Values")
